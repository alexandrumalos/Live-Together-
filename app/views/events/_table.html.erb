<html>
<head>
  <style>
    table{
      width:100%;
      table-layout: fixed;
      background: white;
    }
    .tbl-header{
      background-color: white;
     }
    .tbl-content{
      height:300px;
      overflow-x:auto;
      margin-top: 0px;
      border: 1px solid rgba(255,255,255,0.3);
      background: white;
    }
    th{
      padding: 20px 15px;
      text-align: left;
      font-weight: 500;
      font-size: 18px;
      color: #fff;
      text-transform: uppercase;
    }
    td{
      padding: 15px;
      text-align: center;
      vertical-align:middle;
      font-weight: 300;
      font-size: 12px;
      color: #000000;
      border-bottom: solid 1px rgba(255,255,255,0.1);
    }
    .event-thead {
      background: url(http://jackrugile.com/images/misc/noise-diagonal.png), linear-gradient(#777, #444);
    	border-left: 1px solid #555;
    	border-right: 1px solid #777;
    	border-top: 1px solid #555;
    	border-bottom: 1px solid #333;
    	box-shadow: inset 0 1px 0 #999;
    	color: #fff;
      font-weight: bold;
    	padding: 10px 15px;
    	position: relative;
    	text-shadow: 0 1px 0 #000;
    }
    
    
    ::-webkit-scrollbar {
      width: 6px;
    } 
    ::-webkit-scrollbar-track {
      -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
    } 
    ::-webkit-scrollbar-thumb {
      -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
    }

  </style>
  
  <script>
    $(window).on("load resize ", function() {
      var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
      $('.tbl-header').css({'padding-right':scrollWidth});
    }).resize();
  </script>
  
    <h1></h1>
    <div class= "tbl-header">
      <table class="table table">
        <thead class="event-thead">
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Location</th>
            <th></th>
          </tr>
        </thead>
      </table>
      
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= truncate(strip_tags(event.description), length: 80) %></td>
              <td><%= event.start_time %></td>
              <td><%= event.location %></td>
              <td class="dropdown">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-primary actionButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span></button>
                  <ul id="contextMenu" class="dropdown-menu" role="menu">
                    <li><%= link_to 'Show', event %></li>
                    <li><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
          
        </tbody>
      </table>
      
      </div>
      
      
    </div>
    <p></p>
    <a href="#new" class="btn btn-md btn-primary" data-toggle="modal">Add New Event</a>
  

</head>
</html>