<table class="table table-striped">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Description
      </th>
      <% if is_lead(current_user, @neighborhood) %>
      <th>

      </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @neighborhood.categories.order(:name).each do |category| %>
      <tr>
        <td>
          <%= category.name %>
        </td>
        <td>
          <%= category.description %>
        </td>
        <% if is_lead(current_user, @neighborhood) %>
        <td>
          <%= button_to 'Delete', category, method: :delete, class: 'btn btn-xs btn-danger' %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
