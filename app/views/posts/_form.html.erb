<div class="post">
  <%= form_for(@post) do |f| %>
    <div class="well">
      <div class="media">
        <div class="pull-left">
          <a href='#'>
            <img class="media-object" src="http://placekitten.com/150/150">
          </a>
          <div class="field">
            <label for="category">
              Category
            </label>
            <select name="post[category_id]" class="form-control" id="category">
              <% current_user.current_neighborhood.categories.each do |category| %>
                <option value="<%= category.id %>"><%= category.name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%=  %></h4>
          <p class="text-right"><%=  %></p>
          <% if @post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

              <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <p>
            <div class="field">
              <!-- <%= f.label :title %><br> -->
              <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
            </div>
            <div class="field">
              <!-- <%= f.label :body %><br> -->
              <%= f.text_area :body, cols: 50, rows: 5, class: 'form-control', placeholder: 'Say something...' %>
            </div>
            <div class="actions">
              <%= f.submit class: 'btn btn-lg btn-success pull-right' %>
            </div>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
