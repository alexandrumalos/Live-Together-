<h1>
  <%= current_user.name  %>'s Messages</h1>

<div class="center">

  <hr>

  <% @messages.each do |message| %>
  <%= render message %>
  <% end %>

  <%= will_paginate @messages %>


  <%= link_to '#edit0',class: 'btn btn-success new-message-btn white-text', data: {toggle: 'modal'} do %>
  <span class="glyphicon glyphicon-plus"></span>

  <%end%>
</div>


<div class="modal fade" id="edit0" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-hidden="true" class="close" data-dismiss="modal" type="button">&times;</button>
        <h4 class="modal-title">Edit Profile</h4>
      </div>
      <%= form_tag messages_path, method: :post do  %>
      <div class="modal-body">

          <div class="field">

            <%= label_tag :to %><br>
            <%= text_field_tag :to, '', class: 'form-control' %>
          </div>

          <div  class="field">
            <%= label_tag :subject %><br>
            <%= text_field_tag :head, '', class: 'form-control' %>
          </div>
          <div class="field">
            <%= label_tag :body %><br>
            <%= text_area_tag :text, '', class: 'form-control' %>
          </div>

      </div>
      <div class="modal-footer">
        <%= submit_tag "Send Message", class: "btn btn-primary" %>
        <button class="btn btn-default" data-dismiss="modal" type="button">Close</button>
      </div>
      <% end %>
    </div>

  </div>
</div>
